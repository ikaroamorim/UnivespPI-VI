<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //Renato de Lima Vitorasso 2020
    // Projeto integrador 7 semestre do curso de Engenharia de Computação da Univesp

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/compra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="O que foi comprado ou gasto?" />

        <EditText
            android:id="@+id/preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor gasto" />

        <TextView
            android:id="@+id/textView"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Qual a categoria do gasto?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/listaGasto"
            android:prompt="@string/identGasto" />


        <Button
            android:id="@+id/botao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:text="Salvar dados"
            android:textColor="#ffffff"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp"/>

        <com.jjoe64.graphview.GraphView

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/graph"/>



    </LinearLayout>



</ScrollView>